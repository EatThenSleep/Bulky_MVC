@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-light">
                Create New Product
            </a>
        </div>
    </div>
    <table class="table table-primary">
            <tr>
                <th>Title</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Author</th>
                <th>Category</th>
                <th></th>
            </tr>
            @foreach (var obj in Model)
            {
                <tr class="table-dark">
                     <td>@obj.Title</td>
                     <td>@obj.ISBN</td
                     <td>@obj.ListPrice</td>
                     <td>@obj.Author</td>
                     <td>@obj.Category.Name</td>
                     <td></td>
                    
                    <td>
                       
                            <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-warning mx-2">
                                <i class="bi bi-pen"></i>Edit
                            </a>
                            <form asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" method="post">
                                <button class="btn btn-danger mx-2" type="submit">
                                    <i class="bi bi-trash-fill"></i>Delete
                                </button>
                            </form>
                        
                    </td>
                </tr>
            }
    </table>
</div>